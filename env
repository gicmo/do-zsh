# Environment setup

export EMAIL_ADDRESS="ck@xatom.net"

# -=[ GOPATH
# needed by various programs (Emacs), so set early
export GOPATH=$HOME/Coding/go

# -=[ PATH
typeset -gU path
path=(
  $HOME/.bin
  $GOPATH/bin
  /usr/local/{bin,sbin}
  $path
)

export LC_ALL=en_GB.UTF-8
export LANG=en_GB.UTF-8


